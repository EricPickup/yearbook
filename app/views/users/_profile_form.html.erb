<%= form_with model: @user, local: true do |form| %>
  <% if @user.errors.any? %>
      <p><b>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </b></p>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
