  <%= form.label :email %><br>
  <%= form.text_field :email, value: current_user.email, readonly: true, class: "form-control"  %>
  <br>
  <%= form.label :college %><br>
  <%= form.text_field :college, class: "form-control" %>
  <br>
  <%= form.label :relationship %><br>
  <%= form.text_field :relationship, class: "form-control" %>
  <br>
  <%= form.label :location %><br>
  <%= form.text_field :location, class: "form-control" %>
  <br>

  <p><%= form.submit 'Submit', class: "btn btn-success" %></p>

<% end %>
