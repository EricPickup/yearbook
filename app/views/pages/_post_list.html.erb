<% @posts.each do |post| %>
  <div class="card w-100">
    <div class="card-body">
      <h5 class="card-title"><%= link_to post.user.name, user_path(post.user) %></h5>
      <h6 class="card-subtitle mb-2 text-muted">
        <%= post.created_at.strftime('%B %d, %Y at %l:%M %p') %> (<%= distance_of_time_in_words(post.created_at, Time.now) %> ago)
      </h6>
      <p class="card-text"><%= post.content %></p>
      <% if post.user == current_user %>
        <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
  <br><br>
<% end %>
<% if @posts.empty? %>
  There are no posts.
<% end %>
